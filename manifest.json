{
  "name": "Stress Out Tabs",
  "description": "tab stressing and torture test utils",
  "homepage_url": "https://nope.net",
  "manifest_version": 2,
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "webNavigation"
  ],
  "commands": {
    "reload-all-bcast-storm": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Reload all tabs"
    },
    "reload-all-sequential": {
      "suggested_key": { "default": "Ctrl+Shift+L" },
      "description": "Reload all tabs sequentially"
    },
    "halt-all-tabs": {
      "suggested_key": { "default": "Ctrl+Shift+B" },
      "description": "Halt all tab loads"
    }
  }
}
